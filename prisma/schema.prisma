generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Contact {
  id          String   @id @default(cuid())
  firstName   String
  lastName    String
  email       String
  company     String?
  subject     String
  message     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("contacts")
}

model Founder {
  id            String   @id @default(cuid())
  firstName     String
  lastName      String
  email         String   @unique
  company       String?
  tier          FounderTier
  stripeCustomerId String? @unique
  stripeSubscriptionId String? @unique
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("founders")
}

enum FounderTier {
  SUPPORTER
  FOUNDER
  PARTNER
}
